[push]
    default = upstream

[pull]
    rebase = true

[rebase]
    autosquash = true

[rerere]
    enabled = true

[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto

[color "status"]
    added = green bold
    changed = red bold
    untracked = blue bold

[color "diff"]
    whitespace = red reverse

[alias]
    st = status --short --branch
    ci = commit --verbose
    br = branch --sort=-committerdate
    merged = branch --merged
    lg = log --pretty=oneline -n 24
    log1 = log --pretty=oneline
    fixup = "!git log -n 24 --pretty=format:'%h %s' --no-merges | fzf | cut -c -7 | xargs -o git commit --fixup"

[core]
    excludesfile = ~/.gitignore-global
    attributesfile = ~/.gitattributes

[init]
    templatedir = ~/.git-templates

[user]
    useconfigonly = true
    name = Roger Lipscombe

[diff]
    renameLimit = 10240

#[url "git@github.com:"]
#	insteadOf = https://github.com/

